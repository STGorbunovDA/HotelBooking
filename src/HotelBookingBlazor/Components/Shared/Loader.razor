
<div class="fullscreen-fixed d-flex justify-content-center align-items-center loader">
    <div class="d-flex flex-column justify-content-center align-items-center shadow-lg p-3">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <label>@LoadingText...</label>
    </div>
</div>
<div class="fullscreen-fixed overlay"></div>

@code {
    [Parameter] public string? LoadingText { get; set; } = "Loading";
}

<style type="text/css" scoped>
    .fullscreen-fixed {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }

    .overlay {
        background-color: black;
        opacity: 0.8;
        z-index: 1050;
    }

    .loader {
        z-index: 1051;
    }
</style>
